/* To learn more about Typescript configuration file: https://www.typescriptlang.org/docs/handbook/tsconfig-json.html. */
/* To learn more about Angular compiler options: https://angular.dev/reference/configs/angular-compiler-options. */
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "esnext",                     // ✅ needed for ESM modules like ng2-charts
    "target": "es2020",                     // ✅ modern JS target
    "moduleResolution": "node",             // ✅ resolves modules from node_modules
    "allowSyntheticDefaultImports": true,   // ✅ allows default ESM imports
    "esModuleInterop": true,                // ✅ compatibility with CommonJS & ESM
    "types": [],
    
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/**/*.spec.ts"
  ]
}
